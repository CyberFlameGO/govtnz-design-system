{
  "include": ["build_src"],
  "exclude": ["build", "src/**/*.test.ts", "src/**/*.test.tsx"],
  "compilerOptions": {
    "rootDir": "build_src",
    "outDir": "build",
    "declaration": true,
    "target": "es5",
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": false,
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "types": []
  }
}
