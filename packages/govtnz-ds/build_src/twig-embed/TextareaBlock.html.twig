<div
class="g-textareaBlock-form-group{% if errorId %} g-textareaBlock-form-group--error{% endif %}"
>
  
  
<label
class="g-textareaBlock-label"
for="{{ id | escape('html_attr') }}"
>
  
    
{% block label %}Label text{% endblock %}
  
  
</label>
  
  
  
    
<div
class="g-textareaBlock-hint"
id="{{ hintId | escape('html_attr') }}"
>
  
      
{% block hint %}Hint text{% endblock %}
  
    
</div>
  
  
  
  
  
    
<div
class="g-textareaBlock-error-message"
id="{{ errorId | escape('html_attr') }}"
>
  
      
<span
class="g-textareaBlock-visually-hidden"
>
  
        Error:
      
</span>
  
      
{% block error %}Error text{% endblock %}
  
    
</div>
  
  
  
  
<textarea
aria-describedby="{{ hintId | escape('html_attr') }} {{ errorId | escape('html_attr') }}"
class="g-textareaBlock-textarea{% if width == "30" %}g-textareaBlock-textarea--width-30{% elseif width == "20" %}g-textareaBlock-textarea--width-20{% elseif width == "10" %}g-textareaBlock-textarea--width-10{% elseif width == "5" %}g-textareaBlock-textarea--width-5{% elseif width == "4" %}g-textareaBlock-textarea--width-4{% elseif width == "3" %}g-textareaBlock-textarea--width-3{% elseif width == "2" %}g-textareaBlock-textarea--width-2{% endif %}"
id="{{ id | escape('html_attr') }}"
name="{{ name | escape('html_attr') }}"
rows=""
required="{% if required %}required{% endif %}"
disabled="{% if disabled %}disabled{% endif %}"
readonly="{% if readOnly %}readOnly{% endif %}"
cols=""
autofocus="{% if autoFocus %}autoFocus{% endif %}"
spellcheck="{% if spellCheck %}spellCheck{% endif %}"
autocomplete="{{ autoComplete | escape('html_attr') }}"
maxlength=""
value="{{ value | escape('html_attr') }}"
/>
  

</div>