<div
class="g-inputBlock-form-group{% if errorId %} g-inputBlock-form-group--error{% endif %}"
>
  
  
<label
class="g-inputBlock-label"
for="{{ id | escape('html_attr') }}"
>
  
    
{% block label %}Example text{% endblock %}
  
  
</label>
  
  
  
    
<div
class="g-inputBlock-hint"
id="{{ hintId | escape('html_attr') }}"
>
  
      
{% block hint %}Example text{% endblock %}
  
    
</div>
  
  
  
  
  
    
<div
class="g-inputBlock-error-message"
id="{{ errorId | escape('html_attr') }}"
>
  
      
<span
class="g-inputBlock-visually-hidden"
>
  Error: 
</span>
  
      
{% block error %}Example text{% endblock %}
  
    
</div>
  
  
  
  
<input
aria-describedby="{{ hintId | escape('html_attr') }} {{ errorId | escape('html_attr') }}"
class="g-inputBlock-input{% if width == "30" %}g-inputBlock-input--width-30{% elseif width == "20" %}g-inputBlock-input--width-20{% elseif width == "10" %}g-inputBlock-input--width-10{% elseif width == "5" %}g-inputBlock-input--width-5{% elseif width == "4" %}g-inputBlock-input--width-4{% elseif width == "3" %}g-inputBlock-input--width-3{% elseif width == "2" %}g-inputBlock-input--width-2{% endif %} {% if error %} g-inputBlock-input--error{% endif %}"
id="{{ id | escape('html_attr') }}"
name="{{ name | escape('html_attr') }}"
required="{% if required %}required{% endif %}"
disabled="{% if disabled %}disabled{% endif %}"
readonly="{% if readOnly %}readOnly{% endif %}"
autofocus="{% if autoFocus %}autoFocus{% endif %}"
value="{{ value | escape('html_attr') }}"
min=""
max=""
type="{{ type | escape('html_attr') }}"
spellcheck="{% if spellCheck %}spellCheck{% endif %}"
maxlength=""
autocomplete="{{ autoComplete | escape('html_attr') }}"
/>
  

</div>