<div
class="g-dateInput-form-group"
>
  
  
<fieldset
aria-describedby="{{ dobHint | escape('html_attr') }}"
class="g-dateInput-fieldset"
role="group"
>
  
    
<legend
class="g-dateInput-fieldset__legend"
>
  What is your date of birth?
</legend>
  
    
<span
class="g-dateInput-hint"
id="{{ dobHint | escape('html_attr') }}"
>
  
      For example, 31 3 1980
    
</span>
  
    
<div
class="g-date-input"
id="{{ dob | escape('html_attr') }}"
>
  
      
<div
class="g-date-input__item"
>
  
        
<div
class="g-dateInput-form-group"
>
  
          
<label
class="g-dateInput-label g-date-input__label"
for="{{ dobDay | escape('html_attr') }}"
>
  
            Day
          
</label>
  
          
<input
class="g-dateInput-input g-date-input__input g-dateInput-input--width-2"
id="{{ dobDay | escape('html_attr') }}"
name="{{ name | escape('html_attr') }}"
pattern="[0-9]*"
type=""
disabled="{{ if disabled }}disabled{{ endif }}"
readonly="{{ if readOnly }}readOnly{{ endif }}"
autofocus="{{ if autoFocus }}autoFocus{{ endif }}"
value="{{ value | escape('html_attr') }}"
spellcheck="{{ if spellCheck }}spellCheck{{ endif }}"
autocomplete=""
/>
  
        
</div>
  
      
</div>
  
      
<div
class="g-date-input__item"
>
  
        
<div
class="g-dateInput-form-group"
>
  
          
<label
class="g-dateInput-label g-date-input__label"
for="{{ dobMonth | escape('html_attr') }}"
>
  
            Month
          
</label>
  
          
<input
class="g-dateInput-input g-date-input__input g-dateInput-input--width-2"
id="{{ dobMonth | escape('html_attr') }}"
name="{{ name2 | escape('html_attr') }}"
pattern="[0-9]*"
type=""
disabled="{{ if disabled2 }}disabled2{{ endif }}"
readonly="{{ if readOnly2 }}readOnly2{{ endif }}"
autofocus="{{ if autoFocus2 }}autoFocus2{{ endif }}"
value="{{ value2 | escape('html_attr') }}"
spellcheck="{{ if spellCheck2 }}spellCheck2{{ endif }}"
autocomplete=""
/>
  
        
</div>
  
      
</div>
  
      
<div
class="g-date-input__item"
>
  
        
<div
class="g-dateInput-form-group"
>
  
          
<label
class="g-dateInput-label g-date-input__label"
for="{{ dobYear | escape('html_attr') }}"
>
  
            Year
          
</label>
  
          
<input
class="g-dateInput-input g-date-input__input g-dateInput-input--width-4"
id="{{ dobYear | escape('html_attr') }}"
name="{{ name3 | escape('html_attr') }}"
