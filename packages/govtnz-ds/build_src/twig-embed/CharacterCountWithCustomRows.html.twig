<div
class="g-characterCountWithCustomRows-character-count"
data-maxlength="10"
data-module="character-count"
>
  
  
<div
class="g-characterCountWithCustomRows-form-group"
>
  
    
<label
class="g-characterCountWithCustomRows-label"
for="{{ customRows | escape('html_attr') }}"
>
  
      Full address
    
</label>
  
    
<textarea
class="g-characterCountWithCustomRows-textarea js-character-count"
id="{{ customRows | escape('html_attr') }}"
name="{{ name | escape('html_attr') }}"
rows=""
disabled="{{ if disabled }}disabled{{ endif }}"
readonly="{{ if readOnly }}readOnly{{ endif }}"
cols=""
autofocus="{{ if autoFocus }}autoFocus{{ endif }}"
spellcheck="{{ if spellCheck }}spellCheck{{ endif }}"
autocomplete=""
/>
<span
aria-live="polite"
class="g-characterCountWithCustomRows-hint g-characterCountWithCustomRows-character-count__message"
id="{{ customRowsInfo | escape('html_attr') }}"
>
  You have 10 characters remaining
</span>
  
  
</div>
  

</div>