{{! DEVELOPER NOTE: This template uses triple-bracket "{{{"
    which disables HTML escaping.
    Please ensure these variables are properly escaped:
     - label,
     - hint,
     - error.
    The reason for this is to allow raw HTML, for values such as (eg) '<span lang="mi">MƒÅori</span>'. }}

<div
class="g-textareaBlock-form-group{{#errorId}} g-textareaBlock-form-group--error{{/errorId}}"
>
  
  
<label
class="g-textareaBlock-label"
{{#id}}
  for="{{id}}"
{{/id}}
>
  
    
  {{{label}}}
  
  
</label>
  
  
  
    
<div
class="g-textareaBlock-hint"
{{#hintId}}
  id="{{hintId}}"
{{/hintId}}
>
  
      
  {{{hint}}}
  
    
</div>
  
  
  
  
  
    
<div
class="g-textareaBlock-error-message"
{{#errorId}}
  id="{{errorId}}"
{{/errorId}}
>
  
      
<span
class="g-textareaBlock-visually-hidden"
>
  
        Error:
      
</span>
  
      
  {{{error}}}
  
    
</div>
  
  
  
  
<textarea
aria-describedby="{{hintId}} {{errorId}}"
class="g-textareaBlock-textarea"
{{#id}}
  id="{{id}}"
{{/id}}
{{#name}}
  name="{{name}}"
{{/name}}
{{#rows}}
  rows=""
{{/rows}}
{{#required}}
  required="{{#required}}required{{/required}}"
{{/required}}
{{#disabled}}
  disabled="{{#disabled}}disabled{{/disabled}}"
{{/disabled}}
{{#readOnly}}
  readonly="{{#readOnly}}readOnly{{/readOnly}}"
{{/readOnly}}
{{#cols}}
  cols=""
{{/cols}}
{{#autoFocus}}
  autofocus="{{#autoFocus}}autoFocus{{/autoFocus}}"
{{/autoFocus}}
{{#spellCheck}}
  spellcheck="{{#spellCheck}}spellCheck{{/spellCheck}}"
{{/spellCheck}}
{{#autoComplete}}
  autocomplete="{{autoComplete}}"
{{/autoComplete}}
{{#maxLength}}
  maxlength=""
{{/maxLength}}
{{#value}}
  value="{{value}}"
{{/value}}
/>
  

</div>