<div
class="g-textarea-form-group"
>
  
  
<label
class="g-textarea-label"
{{#moreDetail}}
  for="{{moreDetail}}"
{{/moreDetail}}
>
  
    Can you provide more detail?
  
</label>
  
  
<span
class="g-textarea-hint"
{{#moreDetailHint}}
  id="{{moreDetailHint}}"
{{/moreDetailHint}}
>
  
    Don't include personal or financial information, eg your National Insurance
    number or credit card details.
  
</span>
  
  
<textarea
{{#moreDetailHint}}
  aria-describedby="{{moreDetailHint}}"
{{/moreDetailHint}}
class="g-textarea"
{{#moreDetail}}
  id="{{moreDetail}}"
{{/moreDetail}}
{{#name}}
  name="{{name}}"
{{/name}}
{{#rows}}
  rows=""
{{/rows}}
{{#disabled}}
  disabled="{{#disabled}}disabled{{/disabled}}"
{{/disabled}}
{{#readOnly}}
  readonly="{{#readOnly}}readOnly{{/readOnly}}"
{{/readOnly}}
{{#cols}}
  cols=""
{{/cols}}
{{#autoFocus}}
  autofocus="{{#autoFocus}}autoFocus{{/autoFocus}}"
{{/autoFocus}}
{{#spellCheck}}
  spellcheck="{{#spellCheck}}spellCheck{{/spellCheck}}"
{{/spellCheck}}
{{#autoComplete}}
  autocomplete="{{autoComplete}}"
{{/autoComplete}}
{{#maxLength}}
  maxlength=""
{{/maxLength}}
{{#value}}
  value="{{value}}"
{{/value}}
/>
  

</div>