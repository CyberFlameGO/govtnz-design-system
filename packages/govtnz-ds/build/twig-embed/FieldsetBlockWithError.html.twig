<div
class="g-fieldsetBlockWithError-form-group g-fieldsetBlockWithError-form-group--error"
>
  
        
<fieldset
aria-describedby="{{ hintId | escape('html_attr') }} {{ errorId | escape('html_attr') }}"
class="g-fieldset"
>
  
          
<legend
class="g-fieldset__legend"
>
  {{{legend}}}
</legend>
  
          
<div
class="g-fieldsetBlockWithError-hint"
id="{{ hintId | escape('html_attr') }}"
>
  {{{hint}}}
</div>
  
          
<div
class="g-fieldsetBlockWithError-error-message"
id="{{ errorId | escape('html_attr') }}"
>
  {{{error}}}
</div>
  
          
<div
class="g-fieldsetBlockWithError-children"
>
  {{{children}}}
</div>
  
        
</fieldset>
  
      
</div>