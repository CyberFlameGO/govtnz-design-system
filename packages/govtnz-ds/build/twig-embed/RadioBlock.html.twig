<div
class="g-radios__item"
>
  
               
<input
aria-describedby="{{hintId}}"
class="g-radios__input{{#fakeFocus}} :focus{{/fakeFocus}}"
id="{{radioId}}"
name="{{name}}"
type="radio"
disabled="{{#disabled}}disabled{{/disabled}}"
readonly="{{#readOnly}}readOnly{{/readOnly}}"
autofocus="{{#autoFocus}}autoFocus{{/autoFocus}}"
value="{{value}}"
checked="{{#checked}}checked{{/checked}}"
/>
  
               
<label
class="g-radios-label g-radios__label"
for="{{radioId}}"
>
  {{{label}}}
</label>
  
             
</div>