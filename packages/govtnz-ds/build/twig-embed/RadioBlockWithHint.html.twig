<div
class="g-radios__item"
>
  
        
<input
aria-describedby="{{ hintId }}"
class="g-radios__input{{ if fakeFocus }} :focus{{ endif }}"
id="{{ radioId }}"
type="radio"
name="{{ name }}"
disabled="{{ if disabled }}disabled{{ endif }}"
readonly="{{ if readOnly }}readOnly{{ endif }}"
autofocus="{{ if autoFocus }}autoFocus{{ endif }}"
value="{{ value }}"
checked="{{ if checked }}checked{{ endif }}"
/>
  
        
<label
class="g-radios-label g-radios__label"
for="{{ radioId }}"
>
  {{{label}}}
</label>
  
        
<div
class="g-radios-hint g-radios__hint"
id="{{ hintId }}"
>
  {{{hint}}}
</div>
  
      
</div>