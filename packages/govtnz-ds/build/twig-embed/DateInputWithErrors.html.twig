<div
class="g-dateInputWithErrors-form-group g-dateInputWithErrors-form-group--error"
>
  
  
<fieldset
aria-describedby="{{dobErrorsHint}} {{dobErrorsError}}"
class="g-dateInputWithErrors-fieldset"
role="group"
>
  
    
<legend
class="g-dateInputWithErrors-fieldset__legend"
>
  What is your date of birth?
</legend>
  
    
<span
class="g-dateInputWithErrors-hint"
id="{{dobErrorsHint}}"
>
  
      For example, 31 3 1980
    
</span>
  
    
<span
class="g-dateInputWithErrors-error-message"
id="{{dobErrorsError}}"
>
  
      Error message goes here
    
</span>
  
    
<div
class="g-dateInputWithErrors-date-input"
id="{{dobErrors}}"
>
  
      
<div
class="g-dateInputWithErrors-date-input__item"
>
  
        
<div
class="g-dateInputWithErrors-form-group"
>
  
          
<label
class="g-dateInputWithErrors-label g-dateInputWithErrors-date-input__label"
for="{{dobErrorsDay}}"
>
  
            Day
          
</label>
  
          
<input
class="g-dateInputWithErrors-input g-dateInputWithErrors-date-input__input g-dateInputWithErrors-input--width-2 g-dateInputWithErrors-input--error"
id="{{dobErrorsDay}}"
name="{{name}}"
pattern="[0-9]*"
type=""
disabled="{{#disabled}}disabled{{/disabled}}"
readonly="{{#readOnly}}readOnly{{/readOnly}}"
autofocus="{{#autoFocus}}autoFocus{{/autoFocus}}"
value="{{value}}"
spellcheck="{{#spellCheck}}spellCheck{{/spellCheck}}"
autocomplete=""
/>
  
        
</div>
  
      
</div>
  
      
<div
class="g-dateInputWithErrors-date-input__item"
>
  
        
<div
class="g-dateInputWithErrors-form-group"
>
  
          
<label
class="g-dateInputWithErrors-label g-dateInputWithErrors-date-input__label"
for="{{dobErrorsMonth}}"
>
  
            Month
          
</label>
  
          
<input
class="g-dateInputWithErrors-input g-dateInputWithErrors-date-input__input g-dateInputWithErrors-input--width-2 g-dateInputWithErrors-input--error"
id="{{dobErrorsMonth}}"
name="{{name2}}"
pattern="[0-9]*"
type=""
disabled="{{#disabled2}}disabled2{{/disabled2}}"
readonly="{{#readOnly2}}readOnly2{{/readOnly2}}"
autofocus="{{#autoFocus2}}autoFocus2{{/autoFocus2}}"
value="{{value2}}"
spellcheck="{{#spellCheck2}}spellCheck2{{/spellCheck2}}"
autocomplete=""
/>
  
        
</div>
  
      
</div>
  
      
<div
class="g-dateInputWithErrors-date-input__item"
>
  
        
<div
class="g-dateInputWithErrors-form-group"
>
  
          
<label
class="g-dateInputWithErrors-label g-dateInputWithErrors-date-input__label"
for="{{dobErrorsYear}}"
>
  
            Year
          
</label>
  
          
<input
class="g-dateInputWithErrors-input g-dateInputWithErrors-date-input__input g-dateInputWithErrors-input--width-4 g-dateInputWithErrors-input--error"
id="{{dobErrorsYear}}"
name="{{name3}}"
pattern="[0-9]*"
type=""
disabled="{{#disabled3}}disabled3{{/disabled3}}"
readonly="{{#readOnly3}}readOnly3{{/readOnly3}}"
autofocus="{{#autoFocus3}}autoFocus3{{/autoFocus3}}"
value="{{value3}}"
spellcheck="{{#spellCheck3}}spellCheck3{{/spellCheck3}}"
autocomplete=""
/>
  
        
</div>
  
      
</div>
  
    
</div>
  
  
</fieldset>
  

</div>