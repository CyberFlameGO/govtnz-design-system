<div
class="g-fieldsetBlock-form-group{% if errorId %} g-fieldsetBlock-form-group--error{% endif %}"
>
  
  
<fieldset
aria-describedby="{{ hintId | escape('html_attr') }} {{ errorId | escape('html_attr') }}"
class="g-fieldset"
>
  
    
<legend
class="g-fieldset__legend"
>
  
      
{% block legend %}Legend text{% endblock %}
  
    
</legend>
  
    
  
      
<div
class="g-fieldsetBlock-hint"
id="{{ hintId | escape('html_attr') }}"
>
  
        
{% block hint %}Hint text{% endblock %}
  
      
</div>
  
    
  
    
  
      
<div
class="g-fieldsetBlock-error-message"
id="{{ errorId | escape('html_attr') }}"
>
  
        
<span
class="g-fieldsetBlock-visually-hidden"
>
  
          Error:
        
</span>
  
        
{% block error %}Error text{% endblock %}
  
      
</div>
  
    
  
    
<div
>
{% block children %}Fieldset contents{% endblock %}
</div>
  
  
</fieldset>
  

</div>