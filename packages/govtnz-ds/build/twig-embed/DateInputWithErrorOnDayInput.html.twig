<div
class="g-dateInputWithErrorOnDayInput-form-group g-dateInputWithErrorOnDayInput-form-group--error"
>
  
  
<fieldset
aria-describedby="{{dobDayErrorHint}} {{dobDayErrorError}}"
class="g-dateInputWithErrorOnDayInput-fieldset"
role="group"
>
  
    
<legend
class="g-dateInputWithErrorOnDayInput-fieldset__legend"
>
  What is your date of birth?
</legend>
  
    
<span
class="g-dateInputWithErrorOnDayInput-hint"
id="{{dobDayErrorHint}}"
>
  
      For example, 31 3 1980
    
</span>
  
    
<span
class="g-dateInputWithErrorOnDayInput-error-message"
id="{{dobDayErrorError}}"
>
  
      Error message goes here
    
</span>
  
    
<div
class="g-dateInputWithErrorOnDayInput-date-input"
id="{{dobDayError}}"
>
  
      
<div
class="g-dateInputWithErrorOnDayInput-date-input__item"
>
  
        
<div
class="g-dateInputWithErrorOnDayInput-form-group"
>
  
          
<label
class="g-dateInputWithErrorOnDayInput-label g-dateInputWithErrorOnDayInput-date-input__label"
for="{{dobDayErrorDay}}"
>
  
            Day
          
</label>
  
          
<input
class="g-dateInputWithErrorOnDayInput-input g-dateInputWithErrorOnDayInput-date-input__input g-dateInputWithErrorOnDayInput-input--width-2 g-dateInputWithErrorOnDayInput-input--error"
id="{{dobDayErrorDay}}"
name="{{name}}"
pattern="[0-9]*"
type=""
disabled="{{#disabled}}disabled{{/disabled}}"
readonly="{{#readOnly}}readOnly{{/readOnly}}"
autofocus="{{#autoFocus}}autoFocus{{/autoFocus}}"
value="{{value}}"
spellcheck="{{#spellCheck}}spellCheck{{/spellCheck}}"
autocomplete=""
/>
  
        
</div>
  
      
</div>
  
      
<div
class="g-dateInputWithErrorOnDayInput-date-input__item"
>
  
        
<div
class="g-dateInputWithErrorOnDayInput-form-group"
>
  
          
<label
class="g-dateInputWithErrorOnDayInput-label g-dateInputWithErrorOnDayInput-date-input__label"
for="{{dobDayErrorMonth}}"
>
  
            Month
          
</label>
  
          
<input
class="g-dateInputWithErrorOnDayInput-input g-dateInputWithErrorOnDayInput-date-input__input g-dateInputWithErrorOnDayInput-input--width-2"
id="{{dobDayErrorMonth}}"
name="{{name2}}"
pattern="[0-9]*"
type=""
disabled="{{#disabled2}}disabled2{{/disabled2}}"
readonly="{{#readOnly2}}readOnly2{{/readOnly2}}"
autofocus="{{#autoFocus2}}autoFocus2{{/autoFocus2}}"
value="{{value2}}"
spellcheck="{{#spellCheck2}}spellCheck2{{/spellCheck2}}"
autocomplete=""
/>
  
        
</div>
  
      
</div>
  
      
<div
class="g-dateInputWithErrorOnDayInput-date-input__item"
>
  
        
<div
class="g-dateInputWithErrorOnDayInput-form-group"
>
  
          
<label
class="g-dateInputWithErrorOnDayInput-label g-dateInputWithErrorOnDayInput-date-input__label"
for="{{dobDayErrorYear}}"
>
  
            Year
          
</label>
  
          
<input
class="g-dateInputWithErrorOnDayInput-input g-dateInputWithErrorOnDayInput-date-input__input g-dateInputWithErrorOnDayInput-input--width-4"
id="{{dobDayErrorYear}}"
name="{{name3}}"
pattern="[0-9]*"
type=""
disabled="{{#disabled3}}disabled3{{/disabled3}}"
readonly="{{#readOnly3}}readOnly3{{/readOnly3}}"
autofocus="{{#autoFocus3}}autoFocus3{{/autoFocus3}}"
value="{{value3}}"
spellcheck="{{#spellCheck3}}spellCheck3{{/spellCheck3}}"
autocomplete=""
/>
  
        
</div>
  
      
</div>
  
    
</div>
  
  
</fieldset>
  

</div>