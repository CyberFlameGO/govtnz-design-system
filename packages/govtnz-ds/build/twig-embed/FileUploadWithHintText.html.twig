<div
class="g-fileUploadWithHintText-form-group"
>
  
  
<label
class="g-fileUploadWithHintText-label"
for="{{ fileUpload2 | escape('html_attr') }}"
>
  
    Upload your photo
  
</label>
  
  
<span
class="g-fileUploadWithHintText-hint"
id="{{ fileUpload2Hint | escape('html_attr') }}"
>
  
    Your photo may be in your Pictures, Photos, Downloads or Desktop folder. Or
    in an app like iPhoto.
  
</span>
  
  
<input
aria-describedby="{{ fileUpload2Hint | escape('html_attr') }}"
class="g-fileUploadWithHintText-file-upload"
id="{{ fileUpload2 | escape('html_attr') }}"
name="{{ name | escape('html_attr') }}"
type="file"
disabled="{{ if disabled }}disabled{{ endif }}"
readonly="{{ if readOnly }}readOnly{{ endif }}"
autofocus="{{ if autoFocus }}autoFocus{{ endif }}"
/>
  

</div>