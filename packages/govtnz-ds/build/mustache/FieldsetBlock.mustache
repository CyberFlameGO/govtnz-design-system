{{! DEVELOPER NOTE: This template uses triple-bracket "{{{"
    which disables HTML escaping.
    Please ensure these variables are properly escaped:
     - legend,
     - hint,
     - error,
     - children.
    The reason for this is to allow raw HTML, for values such as (eg) '<span lang="mi">MƒÅori</span>'. }}

<div
class="g-fieldsetBlock-form-group{{#errorId}} g-fieldsetBlock-form-group--error{{/errorId}}"
>
  
  
<fieldset
aria-describedby="{{hintId}} {{errorId}}"
class="g-fieldsetBlock-fieldset"
>
  
    
<legend
class="g-fieldsetBlock-fieldset__legend"
>
  
      
  {{{legend}}}
  
    
</legend>
  
    
  
      
<div
class="g-fieldsetBlock-hint"
{{#hintId}}
  id="{{hintId}}"
{{/hintId}}
>
  
        
  {{{hint}}}
  
      
</div>
  
    
  
    
  
      
<div
class="g-fieldsetBlock-error-message"
{{#errorId}}
  id="{{errorId}}"
{{/errorId}}
>
  
        
<span
class="g-fieldsetBlock-visually-hidden"
>
  
          Error:
        
</span>
  
        
  {{{error}}}
  
      
</div>
  
    
  
    
<div
>
  {{{children}}}
</div>
  
  
</fieldset>
  

</div>