<div
{{#errorSummaryTitle}}
  aria-labelledby="{{errorSummaryTitle}}"
{{/errorSummaryTitle}}
class="g-error-summary optional-extra-class"
data-module="error-summary"
role="alert"
tabindex="-1"
>
  
  
<h2
class="g-error-summary__title"
{{#errorSummaryTitle}}
  id="{{errorSummaryTitle}}"
{{/errorSummaryTitle}}
>
  
    Message to alert the user to a problem goes here
  
</h2>
  
  
<div
class="g-error-summary__body"
>
  
    
<p
>
  
      Optional description of the errors and how to correct them
    
</p>
  
    
<ul
class="g-errorSummary-list g-error-summary__list"
>
  
      
<li
>
  
        
<a
{{#href}}
  href="{{href}}"
{{/href}}
{{#rel}}
  rel="{{rel}}"
{{/rel}}
{{#target}}
  target="{{#target=Blank}}_blank{{/target=Blank}}{{#target=Top}}_top{{/target=Top}}{{#target=Self}}_self{{/target=Self}}{{#target=Parent}}_parent{{/target=Parent}}"
{{/target}}
>
  Descriptive link to the question with an error
</a>
  
      
</li>
  
      
<li
>
  
        
<a
{{#href2}}
  href="{{href2}}"
{{/href2}}
{{#rel2}}
  rel="{{rel2}}"
{{/rel2}}
{{#target2}}
  target="{{#target2=Blank}}_blank{{/target2=Blank}}{{#target2=Top}}_top{{/target2=Top}}{{#target2=Self}}_self{{/target2=Self}}{{#target2=Parent}}_parent{{/target2=Parent}}"
{{/target2}}
>
  Descriptive link to the question with an error
</a>
  
      
</li>
  
    
</ul>
  
  
</div>
  

</div>