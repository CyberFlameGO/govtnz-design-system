{{! DEVELOPER NOTE: This template uses triple-bracket "{{{"
    which disables HTML escaping.
    Please ensure these variables are properly escaped:
     - label,
     - hint,
     - error.
    The reason for this is to allow raw HTML, for values such as (eg) '<span lang="mi">MƒÅori</span>'. }}

<div
class="g-inputBlock-form-group{{#error}} g-inputBlock-form-group--error{{/error}}"
>
  
      
<label
class="g-inputBlock-label"
{{#inputId}}
  for="{{inputId}}"
{{/inputId}}
>
  {{{label}}}
</label>
  
      
<div
class="g-inputBlock-hint"
{{#hintId}}
  id="{{hintId}}"
{{/hintId}}
>
  {{{hint}}}
</div>
  
      
<div
class="g-inputBlock-error-message"
{{#errorId}}
  id="{{errorId}}"
{{/errorId}}
>
<span
class="g-inputBlock-visually-hidden"
>
  Error: 
</span>
  {{{error}}}
</div>
  
      
<input
aria-describedby="{{hintId}} {{errorId}}"
class="g-inputBlock-input{{#width=30}} g-inputBlock-input--width-30{{/width=30}}{{#width=20}} g-inputBlock-input--width-20{{/width=20}}{{#width=10}} g-inputBlock-input--width-10{{/width=10}}{{#width=5}} g-inputBlock-input--width-5{{/width=5}}{{#width=4}} g-inputBlock-input--width-4{{/width=4}}{{#width=3}} g-inputBlock-input--width-3{{/width=3}}{{#width=2}} g-inputBlock-input--width-2{{/width=2}} {{#error}} g-inputBlock-input--error{{/error}}"
{{#inputId}}
  id="{{inputId}}"
{{/inputId}}
{{#name}}
  name="{{name}}"
{{/name}}
type="text"
{{#disabled}}
  disabled="{{#disabled}}disabled{{/disabled}}"
{{/disabled}}
{{#readOnly}}
  readonly="{{#readOnly}}readOnly{{/readOnly}}"
{{/readOnly}}
{{#autoFocus}}
  autofocus="{{#autoFocus}}autoFocus{{/autoFocus}}"
{{/autoFocus}}
{{#value}}
  value="{{value}}"
{{/value}}
{{#spellCheck}}
  spellcheck="{{#spellCheck}}spellCheck{{/spellCheck}}"
{{/spellCheck}}
{{#maxLength}}
  maxlength=""
{{/maxLength}}
{{#autoComplete}}
  autocomplete="{{autoComplete}}"
{{/autoComplete}}
/>
  
    
</div>