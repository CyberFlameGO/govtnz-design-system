{{! DEVELOPER NOTE: This template uses triple-bracket "{{{"
    which disables HTML escaping.
    Please ensure these variables are properly escaped:
     - legend,
     - hint,
     - error,
     - children.
    The reason for this is to allow raw HTML, for values such as (eg) '<span lang="mi">MƒÅori</span>'. }}

<div
class="g-fieldsetBlockWithError-form-group g-fieldsetBlockWithError-form-group--error"
>
  
        
<fieldset
aria-describedby="{{hintId}} {{errorId}}"
class="g-fieldset"
>
  
          
<legend
class="g-fieldset__legend"
>
  {{{legend}}}
</legend>
  
          
<div
class="g-fieldsetBlockWithError-hint"
{{#hintId}}
  id="{{hintId}}"
{{/hintId}}
>
  {{{hint}}}
</div>
  
          
<div
class="g-fieldsetBlockWithError-error-message"
{{#errorId}}
  id="{{errorId}}"
{{/errorId}}
>
  {{{error}}}
</div>
  
          
<div
class="g-fieldsetBlockWithError-children"
>
  {{{children}}}
</div>
  
        
</fieldset>
  
      
</div>