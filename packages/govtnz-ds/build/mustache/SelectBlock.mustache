<div
class="{{#errorId}}g-form-group--error{{/errorId}}"
>
  
  
<label
class="g-selectBlock-label"
{{#selectId}}
  for="{{selectId}}"
{{/selectId}}
>
  
    
  {{{label}}}
  
  
</label>
  
  
<select
class="g-selectBlock-select{{#error}} g-selectBlock-select--error{{/error}}"
{{#selectId}}
  id="{{selectId}}"
{{/selectId}}
