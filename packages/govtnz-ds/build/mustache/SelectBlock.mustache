{{! DEVELOPER NOTE: This template uses triple-bracket "{{{"
    which disables HTML escaping.
    Please ensure these variables are properly escaped:
     - label,
     - children.
    The reason for this is to allow raw HTML, for values such as (eg) '<span lang="mi">MƒÅori</span>'. }}

<div
>
  
        
<label
class="g-selectBlock-label"
{{#selectId}}
  for="{{selectId}}"
{{/selectId}}
>
  
          
  {{{label}}}
  
        
</label>
  
        
<select
class="g-selectBlock-select{{#error}} g-selectBlock-select--error{{/error}}"
{{#selectId}}
  id="{{selectId}}"
{{/selectId}}
{{#name}}
  name="{{name}}"
{{/name}}
{{#multiple}}
  multiple="{{#multiple}}multiple{{/multiple}}"
{{/multiple}}
>
  {{{children}}}
</select>
  
      
</div>